     convertErrorsToExceptions="true"
     convertNoticesToExceptions="true"
     convertWarningsToExceptions="true"
     processIsolation="false"
     stopOnFailure="false"
     syntaxCheck="false"
     verbose="true"
     colors="true">

    <testsuites>
        <testsuite name="IBAN Test Suite">
            <directory>./library/IBAN/</directory>
        </testsuite>
    </testsuites>
